%section#add
	%form{:action => "/", :method => "post"}
		%textarea{:name => "content", :placeholder => "Your note..."}
		%input{:type => "submit", :value => "Take Note!", :id => "note_input"}
- @notes.each do |note| 
	- note.status = :ohshit if note.created_at < Date.today && note.status == :new
	- if note.created_at == curday || note.status == :ohshit
		%article{:class => "#{note.status}"}
			= note.content
			= note.created_at if note.status == :ohshit && curday != note.created_at
